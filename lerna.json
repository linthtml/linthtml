{
  "$schema": "node_modules/lerna/schemas/lerna-schema-json",
  "packages": ["packages/*", "doc"],
  "version": "0.11.0-beta.2",
  "command": {
    "bootstrap": {
      "hoist": "**"
    },
    "version": {
      "noPush": true
    },
    "publish": {
      "fromPackage": true,
      "message": "Release %s",
      "noPush": true
    }
  }
}
