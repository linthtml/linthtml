{
  "$schema": "node_modules/lerna/schemas/lerna-schema-json",
  "useWorkspaces": true,
  "useNx": true,
  "packages": [
    "packages/*",
    "doc"
  ],
  "version": "0.9.0",
  "command": {
    "bootstrap": {
      "hoist": "**"
    },
    "version": {
      "noPush": true
    },
    "publish": {
      "fromPackage": true
    }
  }
}
