{
  "compilerOptions": {
    "composite": true,
    "target": "ES2020",
    "lib": ["ES2020"],
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "baseUrl": ".",
    "paths": {
      "@linthtml/cli": ["packages/cli/lib/index.ts"],
      "@linthtml/dom-utils": ["packages/dom-utils/src/index.ts"],
      "@linthtml/html-parser": ["packages/html-parser/src/index.ts"],
      "@linthtml/linthtml": ["packages/linthtml/lib/index.ts"]
    },
    "allowJs": true,
    "declaration": true,
    "declarationMap": true,
    "importHelpers": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "noImplicitAny": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "skipLibCheck": true
  }
}
