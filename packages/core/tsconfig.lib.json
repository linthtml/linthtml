{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "outDir": "./dist",
    "declaration": true,
    "types": ["node"]
  },
  "exclude": ["src/**/*.spec.ts", "src/**/*.test.ts", "src/__tests__", "src/**/__tests__", "dist/"],
  "include": ["src/**/*.ts", "src/*.ts"]
}
