{
  "name": "@linthtml/dom-utils",
  "$schema": "../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "packages/dom-utils/src",
  "projectType": "library",
  "targets": {
    "build": {
      "executor": "nx:run-commands",
      "options": {
        "cwd": "{projectRoot}",
        "commands": [
          "tsc --project tsconfig.lib.cjs.json",
          "find ./dist/cjs -iname '*.js' -exec bash -c 'mv -- \"$1\" \"${1}.cjs\"' bash {} \\;",
          "tsc --project tsconfig.lib.esm.json"
        ],
        "parallel": false
      }
    },
    "lint": {
      "executor": "@nx/eslint:lint",
      "outputs": [
        "{options.outputFile}"
      ]
    },
    "test": {
      "dependsOn": [
        "build"
      ],
      "executor": "nx:run-commands",
      "options": {
        "cwd": "{projectRoot}",
        "command": "mocha --project ./tsconfig.test.json"
      },
      "configurations": {
        "coverage": {
          "command": "c8 --reporter lcov nx run :test"
        }
      }
    }
  },
  "tags": []
}
