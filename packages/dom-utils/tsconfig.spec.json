{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": "../dist/out-tsc",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "types": ["jest", "node"],
    "esModuleInterop": false
  },
  "include": [
    "jest.config.ts",
    "src/**/*.test.ts",
    "src/**/*.spec.ts",
    "src/**/*.d.ts",
    "src/__tests__",
    "./src/**/*.ts"
  ]
}
