{
  "name": "linthtml-monorepo",
  "description": "The HTML5 linter and validator you need",
  "repository": {
    "type": "git",
    "url": "git+ssh://git@github.com/linthtml/linthtml.git"
  },
  "keywords": [
    "html",
    "lint",
    "hint",
    "linthtml",
    "linter"
  ],
  "scripts": {
    "clean": "lerna run clean; rm -rf tmp; rm -rf packages/**/*.tsbuildinfo; rm -rf packages/**/dist",
    "lint": "lerna run lint",
    "coverage": "lerna run test:coverage",
    "commit": "npx git-cz",
    "changelog": "conventional-changelog -p angular -i CHANGELOG.md -s -r -a",
    "version": "",
    "test": "lerna run test",
    "build": "lerna run build",
    "prepublishOnly": "npm run clean; npm run build"
  },
  "license": "ISC",
  "devDependencies": {
    "@commitlint/cli": "^19.3.0",
    "@commitlint/config-conventional": "^19.2.2",
    "@eslint/eslintrc": "^2.1.1",
    "@eslint/js": "~8.57.0",
    "@nx/js": "20.3.0",
    "@nx/node": "20.3.0",
    "@types/chai": "^5.0.1",
    "@types/mocha": "^10.0.6",
    "@types/node": "^18.16.9",
    "c8": "^10.1.3",
    "chai": "^5.1.0",
    "commitizen": "^4.3.0",
    "conventional-changelog-cli": "^4.1.0",
    "cz-conventional-changelog": "^3.3.0",
    "eslint": "^9.8.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.2.1",
    "lefthook": "^1.4.9",
    "lerna": "^8.1.9",
    "mocha": "^11.0.1",
    "neostandard": "^0.12.0",
    "nx": "20.3.0",
    "prettier": "^3.2.5",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "tslib": "^2.6.2",
    "typescript": "5.6.3",
    "typescript-eslint": "^8.13.0"
  },
  "engines": {
    "node": ">=16"
  },
  "contributors": [
    "Benjamin JEGARD <kamikillerto@gmail.com> (https://github.com/KamiKillertO)"
  ],
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "bugs": {
    "url": "https://github.com/linthtml/linthtml/issues"
  },
  "homepage": "https://github.com/linthtml/linthtml#readme",
  "author": "Benjamin JEGARD <kamikillerto@gmail.com>",
  "private": false,
  "workspaces": [
    "packages/*",
    "doc"
  ],
  "volta": {
    "node": "20.18.1"
  }
}
